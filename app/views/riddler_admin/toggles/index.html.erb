<div class="row">
  <% if notice %>
  <div class="col-sm">
    <span id="notice"><%= notice %></span>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-6">
    <h1>Toggles</h1>
  </div>
  <div class="col-sm-6">
    <%= link_to 'New toggle', new_toggle_path, class: 'btn btn-primary float-right'%>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Id</th>
      <th>Type</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toggles.each do |toggle| %>
      <tr>
        <td><%= link_to toggle.title, toggle %></td>
        <td><%= toggle.id %></td>
        <td><%= toggle.type.demodulize %></td>

        <td>
            <%= link_to 'Delete', toggle, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
