<%= form_with model: feature_flag, local: true do |form| %>
  <div class="row">
    <% if feature_flag.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(feature_flag.errors.count, "error") %> prohibited this feature_flag from being saved:</h2>

        <ul>
        <% feature_flag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control" %>
      </div>
      <div class="col">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control" %>
        <small class="form-text text-muted">This will be created based on the title if not provided</small>
      </div>
    </div>
    <% unless @feature_flag.persisted? %>
    <div class="form-row">
      <div class="col">
        <%= form.label :type %>
        <%= form.select :type, options_for_select(::RiddlerAdmin::FeatureFlag.available_classes.map{|klass| [klass.short_name, klass.name]}, feature_flag.type), {}, class:"form-control" %>
      </div>
    </div>
    <% end %>
    <div class="form-row">
      <div class="col">
        <%= form.label :include_condition %>
        <%= form.text_field :include_condition, class: "form-control", placeholder: "e.g. params.user_id is present" %>
        <small class="form-text text-muted">Use data from the context that evaluates to <code>true</code> or <code>false</code></small>
      </div>
    </div>

    <%= render partial: feature_flag.to_partial_path("form"), locals: { f: form, feature_flag: feature_flag } %>

    <div class="form-row">
      <div class="actions">
        <%= form.submit "Save feature flag", class: "btn btn-primary" %>
        <%= link_to "Cancel", feature_flags_path, class: "btn btn-light" %>
      </div>
    </div>
  </div>
<% end %>
