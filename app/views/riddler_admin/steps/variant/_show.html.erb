<div class="row" style="margin-bottom: 32px;">
  <div class="col-sm">

    <ul id="step-tabs" class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" id="steps-tab" data-toggle="tab" href="#steps" role="tab" aria-controls="steps" aria-selected="true">Steps</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="step-actions-tab" data-toggle="tab" href="#step-actions" role="tab" aria-controls="step-actions" aria-selected="false">Actions</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="step-definition-tab" data-toggle="tab" href="#step-definition" role="tab" aria-controls="step-definition" aria-selected="false">Definition</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="step-preview-tab" data-toggle="tab" href="#step-preview" role="tab" aria-controls="step-preview" aria-selected="false">Preview</a>
      </li>
    </ul>

  </div>
</div>

<div class="row">
  <div class="col-sm">

    <div class="tab-content" id="step-tabs-content">
      <div class="tab-pane fade show active" id="steps" role="tabpanel" aria-labelledby="steps-tab">

        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <h4>Add a step type</h4>

              <ul class="nav flex-column">
              <% RiddlerAdmin::Step.available_classes.each do |klass| %>
                <%= link_to "#{klass.short_name} Step", new_step_path(type: klass.name, step_id: @step.id), remote: true, class: 'nav-link' %>
              <% end %>
              </ul>

            </div>
            <div class="col-md-9">
              <div id="new-step">
              </div>

              <%= render partial: "riddler_admin/step_container", locals: { stepable: @step } %>

            </div>
          </div>
        </div>

      </div>

      <div class="tab-pane fade" id="step-actions" role="tabpanel" aria-labelledby="step-actions-tab">
        <%= render partial: "actions", locals: { step: @step } %>
      </div>

      <div class="tab-pane fade" id="step-definition" role="tabpanel" aria-labelledby="definition-tab">
        <%= render partial: "definition", object: @step %>
      </div>

      <div class="tab-pane fade" id="step-preview" role="tabpanel" aria-labelledby="preview-tab">
        <%= render partial: "riddler_admin/preview_step", locals: { preview_contexts: @preview_contexts, step: @step } %>
      </div>
    </div>

  </div>
</div>
