<%= form_with model: email, local: true do |form| %>
  <div class="row">
    <% if email.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(email.errors.count, "error") %> prohibited this email from being saved:</h2>

        <ul>
        <% email.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <div class="form-row">
      <div class="col">
        <%= form.label :title %>
        <%= form.text_field :title, class:"form-control" %>
      </div>
      <div class="col">
        <%= form.label :name %>
        <%= form.text_field :name, class:"form-control" %>
        <small class="form-text text-muted">This will be created based on the title if not provided</small>
      </div>
    </div>
    <% unless @email.persisted? %>
    <div class="form-row">
      <div class="col">
        <%= form.label :type %>
        <%= form.select :type, options_for_select(::RiddlerAdmin::Email.available_classes.map{|klass| [klass.short_name, klass.name]}, email.type), {}, class:"form-control" %>
      </div>
    </div>
    <% end %>
    <div class="form-row">
      <div class="col">
        <%= form.label :include_predicate %>
        <%= form.text_field :include_predicate, class: "form-control", placeholder: "e.g. params.user_id is present" %>
        <small class="form-text text-muted">Use data from the context that evaluates to <code>true</code> or <code>false</code></small>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col">
        <%= form.submit "Save email", class: "btn btn-primary" %>
        <%= link_to "Cancel", emails_path, class: "btn btn-light" %>
      </div>
    </div>
  </div>
<% end %>
