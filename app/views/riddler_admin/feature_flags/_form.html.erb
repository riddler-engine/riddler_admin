<%= form_with model: feature_flag, local: true do |form| %>
  <div class="row">
    <% if feature_flag.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(feature_flag.errors.count, "error") %> prohibited this preview context from being saved:</h2>

        <ul>
        <% feature_flag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= form.label :enabled %>
          <%= form.check_box :enabled, class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="actions">
          <%= form.submit "Save feature flag", class: "btn btn-primary" %>
          <%= link_to "Cancel", feature_flags_path, class: "btn btn-light" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
