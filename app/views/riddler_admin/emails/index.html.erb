<div class="row">
  <% if notice %>
  <div class="col-sm">
    <span id="notice"><%= notice %></span>
  </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-6">
    <h1>Emails</h1>
  </div>
  <div class="col-sm-6">
    <%= link_to 'New email', new_email_path, class: 'btn btn-primary float-right'%>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Id</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= link_to email.title, email %></td>
        <td><%= email.id %></td>

        <td>
          <%= link_to 'Delete', email, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
