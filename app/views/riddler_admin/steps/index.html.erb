<div class="row">
  <div class="col-sm">
    <span id="notice"><%= notice %></span>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <h1>Steps</h1>
  </div>
  <div class="col-sm-6">
    <%= link_to 'New step', new_step_path, class: 'btn btn-primary float-right'%>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
      <th>Type</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= link_to step.name, step %></td>
        <td><%= step.id %></td>
        <td><%= step.type.demodulize %></td>

        <td>
            <%= link_to 'Delete', step, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
